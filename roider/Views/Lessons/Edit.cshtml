@model roider.Models.Lessons

@{
    ViewBag.Title = "Edit Lesson";
    Layout = "_Layout";
}

<h2>Edit Lesson</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="LessonId" />
    <div class="form-group">
        <label asp-for="LessonTitle" class="control-label"></label>
        <input asp-for="LessonTitle" class="form-control" />
        <span asp-validation-for="LessonTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonContentType" class="control-label"></label>
        <input asp-for="LessonContentType" class="form-control" />
        <span asp-validation-for="LessonContentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label"></label>
        <select asp-for="CourseId" class="form-control">
            @foreach (var course in ViewBag.CoursesList)
            {
                <option value="@course.CourseId">@($"{course.CourseId} - {course.CourseTitle}")</option>
            }
        </select>
        
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div class="btn-group" role="group">
    @* <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a> *@
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.LessonId">Delete</a>
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.LessonId">Details</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>