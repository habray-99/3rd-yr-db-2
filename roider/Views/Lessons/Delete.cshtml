@model roider.Models.Lessons

@{
    ViewBag.Title = "Delete Lesson";
    Layout = "_Layout";
}

<h2>Delete Lesson</h2>

<h3>Are you sure you want to delete this lesson?</h3>
<div>
    <h4>Lessons</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonContentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonContentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.LessonId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @* <a asp-action="Index">Back to List</a> *@
    </form>
</div>

<div class="btn-group" role="group">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.LessonId">Edit</a>
    @* <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.LessonId">Delete</a> *@
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.LessonId">Details</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>