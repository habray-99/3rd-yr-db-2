@model Lessons

@{
    ViewBag.Title = "Delete Lesson";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Lesson</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this lesson?</h3>
    <div>
        <h4 class="text-center mb-4">Lesson Details</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LessonTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonContentType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LessonContentType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseId)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.LessonId" class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.LessonId">Edit</a>
        <a class="btn btn-secondary mr-2" asp-action="Details" asp-route-id="@Model.LessonId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>