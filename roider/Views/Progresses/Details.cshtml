@model Progresses

@{
    ViewBag.Title = "Progress Details";
    Layout = "_Layout";
}

<h2>Progress Details</h2>

<div>
    <h4>Progresses</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonStatus)
        </dt>
        <dd class="col-sm-10">
            @Model.LessonStatus.ToStatusString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastAccessedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastAccessedDate)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProgressId">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ProgressId">Delete</a>
        @* <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.CourseId">Details</a> *@
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>