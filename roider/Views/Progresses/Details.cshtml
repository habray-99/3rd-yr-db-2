@model Progresses

@{
    ViewBag.Title = "Progress Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Progress Details</h2>

    <div>
        <h4 class="text-center mb-4">Progress Information</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseId)
            </dt>
            <dd class="col-sm-10">
                @Model.CourseId <!-- Directly display CourseId as a string -->
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LessonId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonStatus)
            </dt>
            <dd class="col-sm-10">
                @Model.LessonStatus.ToStatusString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastAccessedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastAccessedDate)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.ProgressId">Edit</a>
        <a class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@Model.ProgressId">Delete</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>