@model Progresses

@{
    ViewBag.Title = "Edit Progress";
    Layout = "_Layout";
}

<h2>Edit Progress</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProgressId" />
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <select asp-for="StudentId" class="form-control">
            @foreach (var student in ViewBag.StudentsList)
            {
                <option value="@student.StudentId">@($"{student.StudentId} - {student.StudentName}")</option>
            }
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="LessonId" class="control-label"></label>
            <select asp-for="LessonId" class="form-control">
                @foreach (var lesson in ViewBag.LessonsList)
                {
                    <option value="@lesson.LessonId">@($"{lesson.LessonId} - {lesson.LessonTitle}")</option>
                }
            </select>
            <span asp-validation-for="LessonId" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="LessonStatus" class="control-label"></label>
        <select asp-for="LessonStatus" class="form-control">
            <option value="">Select Lesson Status</option>
            <option value="0">Not Started</option>
            <option value="1">In Progress</option>
            <option value="2">Completed</option>
        </select>
        <span asp-validation-for="LessonStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastAccessedDate" class="control-label"></label>
        <input asp-for="LastAccessedDate" class="form-control" />
        <span asp-validation-for="LastAccessedDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div class="btn-group" role="group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProgressId">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ProgressId">Delete</a>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.ProgressId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
