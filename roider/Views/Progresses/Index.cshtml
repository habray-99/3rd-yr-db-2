@model System.Collections.Generic.List<roider.Models.Progresses>

@{
    ViewBag.Title = "Index - Student";
    Layout = "_Layout";
}
<h2>Progress Records</h2>

<a class="btn btn-success" asp-action="Create">Create Progress Record</a>
<table class="table">
    <thead>
        <tr>
            <th>Progress ID</th>
            <th>Student ID</th>
            <th>Lesson ID</th>
            <th>Lesson Status</th>
            <th>Last Accessed Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var progress in Model)
        {
            <tr>
                <td>@progress.ProgressID</td>
                <td>@progress.StudentID</td>
                <td>@progress.LessonID</td>
                <td>@progress.LessonStatus</td>
                <td>@progress.LastAccessedDate.ToString("d")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@progress.ProgressID">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@progress.ProgressID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

