@model Progresses

@{
    ViewBag.Title = "Delete Progress";
    Layout = "_Layout";
}

<h2>Delete Progress</h2>

<h3>Are you sure you want to delete this progress record?</h3>
<div>
    <h4>Progresses</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonStatus)
        </dt>
        <dd class="col-sm-10">
            @Model.LessonStatus.ToStatusString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastAccessedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastAccessedDate)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.ProgressId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @* <a asp-action="Index">Back to List</a> *@
    </form>
</div>

<div class="btn-group" role="group">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProgressId">Edit</a>
    @* <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.CourseId">Delete</a> *@
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.ProgressId">Details</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back</a>
</div>