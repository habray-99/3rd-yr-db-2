@model Progresses

@{
    ViewBag.Title = "Delete Progress";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Progress</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this progress record?</h3>
    <div>
        <h4 class="text-center mb-4">Progress Details</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseId)
            </dt>
            <dd class="col-sm-10">
                @Model.CourseId <!-- Directly display CourseId as a string -->
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LessonId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonStatus)
            </dt>
            <dd class="col-sm-10">
                @Model.LessonStatus.ToStatusString()
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastAccessedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastAccessedDate)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.ProgressId" class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.ProgressId">Edit</a>
        <a class="btn btn-secondary mr-2" asp-action="Details" asp-route-id="@Model.ProgressId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>