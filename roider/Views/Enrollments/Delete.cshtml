@model Enrollments

@{
    ViewBag.Title = "Delete Enrollment";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Enrollment</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this enrollment?</h3>
    <div>
        <h4 class="text-center mb-4">Enrollment Details</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">Enrollment ID</dt>
            <dd class="col-sm-10">@Model.EnrollmentId</dd>
            <dt class="col-sm-2">Student ID</dt>
            <dd class="col-sm-10">@Model.StudentId</dd>
            <dt class="col-sm-2">Course ID</dt>
            <dd class="col-sm-10">@Model.CourseId</dd>
            <dt class="col-sm-2">Enroll Date</dt>
            <dd class="col-sm-10">@Model.EnrollDate.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.EnrollmentId" class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.EnrollmentId">Edit</a>
        <a class="btn btn-secondary mr-2" asp-action="Details" asp-route-id="@Model.EnrollmentId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>