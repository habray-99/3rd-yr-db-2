@model System.Collections.Generic.List<roider.Models.Enrollments>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Enrollments</h2>

<a class="btn btn-success" asp-action="Create">Create Enrollment</a>
<table class="table">
    <thead>
        <tr>
            <th>Enrollment ID</th>
            <th>Student ID</th>
            <th>Course ID</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.EnrollmentId</td>
                <td>@enrollment.StudentId</td>
                <td>@enrollment.CourseId</td>
                <td>@enrollment.EnrollDate</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@enrollment.EnrollmentId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@enrollment.EnrollmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

