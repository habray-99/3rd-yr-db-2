@model System.Collections.Generic.List<roider.Models.Students>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Students</h2>

<a class="btn btn-success" asp-action="Create">Create Student</a>
<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Contact</th>
            <th>Date of Birth</th>
            <th>Email Address</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.StudentName</td>
                <td>@student.Contact</td>
                <td>@student.DOB.ToString("d")</td>
                <td>@student.EmailAddress</td>
                <td>@student.Country</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@student.StudentID">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

