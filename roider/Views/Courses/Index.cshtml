@model System.Collections.Generic.List<roider.Models.Courses>

@{
    ViewBag.Title = "Courses";
    Layout = "_Layout";
    // <p>@Model.Count</p>
}
<title>Courses</title>
<h1>Courses</h1>
@* <a class="btn btn-success" asp-action="Create">Create Course</a> *@
<a class="btn btn-primary" asp-action="Create">Add New Course</a>
<table class="table">
    <thead>
    <tr>
        <th>Course ID</th>
        <th>Course Title</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody class="table-body">
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.CourseId</td>
            <td>@course.CourseTitle</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@course.CourseId">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@course.CourseId">Delete</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@course.CourseId">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
