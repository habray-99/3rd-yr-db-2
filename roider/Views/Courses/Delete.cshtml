@model roider.Models.Courses


@{
    ViewBag.Title = "Delete Course";
    Layout = "_Layout";
}

<h2>Delete Course</h2>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>Courses</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseTitle)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.CourseId" class="form-group">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>

<div>
