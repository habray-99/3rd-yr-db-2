@model Courses

@{
    ViewBag.Title = "Delete Course";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Course</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this course?</h3>
    <div>
        <h4 class="text-center mb-4">Course Details</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseTitle)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.CourseId" class="form-group text-center">
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a>
        <a class="btn btn-secondary mr-2" asp-action="Details" asp-route-id="@Model.CourseId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>