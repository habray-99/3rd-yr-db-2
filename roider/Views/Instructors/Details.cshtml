@model Instructors

@{
    ViewBag.Title = "Instructor Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Instructor Details</h2>

    <div>
        <h4 class="text-center mb-4">Instructor Information</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InstructorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InstructorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Specialization)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Specialization)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YearsOfExperience)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.YearsOfExperience)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.InstructorId">Edit</a>
        <a class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@Model.InstructorId">Delete</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>