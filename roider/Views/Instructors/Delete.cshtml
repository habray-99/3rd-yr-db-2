@model Instructors

@{
    ViewBag.Title = "Delete Instructor";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Instructor</h2>

    <h3 class="text-center mb-4">Are you sure you want to delete this instructor?</h3>
    <div>
        <h4 class="text-center mb-4">Instructor Details</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InstructorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InstructorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Specialization)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Specialization)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YearsOfExperience)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.YearsOfExperience)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.InstructorId" class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model.InstructorId">Edit</a>
        <a class="btn btn-secondary mr-2" asp-action="Details" asp-route-id="@Model.InstructorId">Details</a>
        <a class="btn btn-outline-dark" asp-action="Index">Back</a>
    </div>
</div>